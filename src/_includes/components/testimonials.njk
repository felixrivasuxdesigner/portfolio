<!-- Feedback Area Start -->
<div id="feedback" class="bg--overlay" data-parallax-bg-img="/assets/img/feedback-img/bg.webp">
  <div class="container">
    <!-- Section Title Start -->
    <div class="section--title">
      <h2><strong>{{ translations[locale].feedback.title }}</strong></h2>
    </div>
    <!-- Section Title End -->

    <div class="feedback-container">
      <div class="feedback-faq">
        <!-- Feedback FAQ Start -->
        <div class="feedback--faq accordion" id="feedbackFAQ">
          <h3 class="faq--title">{{ translations[locale].feedback.why_me }}</h3>

          <!-- FAQ Item Start -->
          <div class="accordion-item">
            <div class="accordion-header" id="feedbackFAQHeading01">
              <button class="accordion-button" type="button" data-target="#feedbackA01" aria-expanded="true" aria-controls="feedbackA01">
                {{ translations[locale].feedback.specializations.title | safe }}
                <i class="fa fa-chevron-down"></i>
              </button>
            </div>

            <div id="feedbackA01" class="accordion-collapse collapse show" aria-labelledby="feedbackFAQHeading01">
              <div class="accordion-body">
                {{ translations[locale].feedback.specializations.description }}
              </div>
            </div>
          </div>
          <!-- FAQ Item End -->

          <!-- FAQ Item Start -->
          <div class="accordion-item">
            <div class="accordion-header" id="feedbackFAQHeading02">
              <button class="accordion-button collapsed" type="button" data-target="#feedbackA02" aria-expanded="false" aria-controls="feedbackA02">
                {{ translations[locale].feedback.leadership.title | safe }}
                <i class="fa fa-chevron-down"></i>
              </button>
            </div>

            <div id="feedbackA02" class="accordion-collapse collapse" aria-labelledby="feedbackFAQHeading02">
              <div class="accordion-body">
                {{ translations[locale].feedback.leadership.description }}
              </div>
            </div>
          </div>
          <!-- FAQ Item End -->

          <!-- FAQ Item Start -->
          <div class="accordion-item">
            <div class="accordion-header" id="feedbackFAQHeading03">
              <button class="accordion-button collapsed" type="button" data-target="#feedbackA03" aria-expanded="false" aria-controls="feedbackA03">
                {{ translations[locale].feedback.innovation.title | safe }}
                <i class="fa fa-chevron-down"></i>
              </button>
            </div>

            <div id="feedbackA03" class="accordion-collapse collapse" aria-labelledby="feedbackFAQHeading03">
              <div class="accordion-body">
                {{ translations[locale].feedback.innovation.description }}
              </div>
            </div>
          </div>
          <!-- FAQ Item End -->
        </div>
        <!-- Feedback FAQ End -->
      </div>

      <div class="feedback-testimonials">
        <!-- Testimonials Container Start -->
        <div class="testimonials-container">
          <!-- Testimonial Item Start -->
          <div class="testimonial-item active" id="testimonial-1">
            <div class="testimonial-content">
              <i class="fa fa-quote-left"></i>
              <p>{{ translations[locale].feedback.testimonials.person1.text }}</p>
              <cite>{{ translations[locale].feedback.testimonials.person1.name }}</cite>
            </div>
          </div>
          <!-- Testimonial Item End -->

          <!-- Testimonial Item Start -->
          <div class="testimonial-item" id="testimonial-2">
            <div class="testimonial-content">
              <i class="fa fa-quote-left"></i>
              <p>{{ translations[locale].feedback.testimonials.person2.text }}</p>
              <cite>{{ translations[locale].feedback.testimonials.person2.name }}</cite>
            </div>
          </div>
          <!-- Testimonial Item End -->
        </div>
        <!-- Testimonials Container End -->

        <!-- Testimonial Navigation Start -->
        <div class="testimonial-navigation">
          <button class="testimonial-nav-btn active" data-target="testimonial-1"></button>
          <button class="testimonial-nav-btn" data-target="testimonial-2"></button>
        </div>
        <!-- Testimonial Navigation End -->
      </div>
    </div>
  </div>
</div>
<!-- Feedback Area End -->