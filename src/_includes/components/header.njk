<!-- Header Area Start -->
<div id="header">
  <nav class="header--navbar">
    <div class="container">
      <div class="navbar">
        <div class="navbar-header">
          <!-- Header Custom Button Start -->
          <div class="header--custom-btn hidden-lg hidden-md">
            <a href="#hireMeModal" class="btn--default hire-me-btn"><i class="fa fa-user-plus"></i></a>
          </div>
          <!-- Header Custom Button End -->

          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#headerNav"
            aria-expanded="false" aria-controls="headerNav">
            <span class="sr-only">{{ translations[locale].header.toggle_navigation | default('Toggle navigation') }}</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>

          <!-- Logo Start -->
          <a class="logo navbar-brand" href="{{ site.baseUrl }}{{ locale }}/">
            <div class="logo--img">
              <img src="{{ site.baseUrl }}assets/img/logo.webp" class="img-responsive" alt="{{ translations[locale].header.logo_alt | default('Félix Rivas Logo') }}" />
            </div>

            <div class="logo--content">
              <h1><strong>{{ translations[locale].header.name_first | default('Felix') }}</strong> {{ translations[locale].header.name_last | default('Rivas') }}</h1>
              <p>{{ translations[locale].header.role | default('Diseñador UX/UI') }}</p>
            </div>
          </a>
          <!-- Logo End -->
        </div>

        <!-- Header Nav Start -->
        <div id="headerNav" class="header--nav navbar-collapse collapse">
          <ul class="nav navbar-nav navbar-right AnimateScroll">
            <li><a href="#banner">{{ translations[locale].header.home | default('Inicio') }}</a></li>
            <li><a href="#about">{{ translations[locale].header.about | default('Sobre Mí') }}</a></li>
            <li><a href="#services">{{ translations[locale].header.services | default('Servicios') }}</a></li>
            <li><a href="#gallery">{{ translations[locale].header.portfolio | default('Portafolio') }}</a></li>
            <li><a href="#feedback">{{ translations[locale].header.feedback | default('Testimonios') }}</a></li>
            <li><a href="#contact">{{ translations[locale].header.contact | default('Contacto') }}</a></li>
          </ul>
        </div>
        <!-- Header Nav End -->

        <!-- Header Custom Button Start -->
        <div class="header--custom-btn hidden-sm hidden-xs ml-2">
          <a href="#hireMeModal" class="btn--default hire-me-btn">
            <i class="fa fa-user-plus"></i>{{ translations[locale].header.hire_me | default('Contrátame') }}
          </a>
        </div>
        <!-- Header Custom Button End -->
      </div>
    </div>
  </nav>
</div>
<!-- Header Area End -->