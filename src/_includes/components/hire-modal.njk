<!-- Hire Me Contact Modal Start -->
<div id="hireMeModal" class="hire-me--modal modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close">&times;</button>

        <div class="modal-title">
          <h2>{{ translations[locale].hire_me.title }}</h2>
          <p>{{ translations[locale].hire_me.subtitle }}</p>
        </div>
      </div>

      <div class="modal-body">
        <form action="https://formsubmit.co/rivafelix@gmail.com" method="POST" data-form="validate">
          <!-- Redirects to a custom "Gracias" page -->
          <input type="hidden" name="_next" value="/thankyou/">
          <!-- Avoid captcha -->
          <input type="hidden" name="_captcha" value="false">
          <!-- Email subject -->
          <input type="hidden" name="_subject" value="New project request from portfolio">
          <!-- Spam prevention -->
          <input type="text" name="_honey" style="display:none">
          
          <div class="form-controls">
            <div class="row">
              <div class="col-md-6">
                <div class="form-group name">
                  <input type="text" name="name" class="form-control" placeholder="{{ translations[locale].hire_me.name }}" required>
                </div>
              </div>

              <div class="col-md-6">
                <div class="form-group email">
                  <input type="email" name="email" class="form-control" placeholder="{{ translations[locale].hire_me.email }}" required>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-md-6">
                <div class="form-group project-title">
                  <input type="text" name="project_title" class="form-control" placeholder="{{ translations[locale].hire_me.project_title }}" required>
                </div>
              </div>

              <div class="col-md-6">
                <div class="form-group case-category">
                  <select name="category" class="form-control bg-fa-caret-down white">
                    <option>{{ translations[locale].hire_me.category }}</option>
                    <option>{{ translations[locale].hire_me.project_categories.ux_ui }}</option>
                    <option>{{ translations[locale].hire_me.project_categories.web }}</option>
                    <option>{{ translations[locale].hire_me.project_categories.mobile }}</option>
                    <option>{{ translations[locale].hire_me.project_categories.research }}</option>
                    <option>{{ translations[locale].hire_me.project_categories.other }}</option>
                  </select>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-md-6">
                <div class="form-group budget">
                  <select name="budget" class="form-control bg-fa-caret-down white">
                    <option>{{ translations[locale].hire_me.budget }}</option>
                    <option>$1,000 - $3,000</option>
                    <option>$3,000 - $6,000</option>
                    <option>$6,000 - $10,000</option>
                    <option>$10,000+</option>
                  </select>
                </div>
              </div>

              <div class="col-md-6">
                <div class="form-group date">
                  <input type="text" name="date" class="form-control DatePicker bg-fa-calender" placeholder="{{ translations[locale].hire_me.estimate_date }}">
                </div>
              </div>
            </div>

            <div class="form-group referral-source">
              <select name="referral_source" class="form-control bg-fa-caret-down white">
                <option>{{ translations[locale].hire_me.referral_source }}</option>
                <option>{{ translations[locale].hire_me.referral_options.search }}</option>
                <option>{{ translations[locale].hire_me.referral_options.social }}</option>
                <option>{{ translations[locale].hire_me.referral_options.linkedin }}</option>
                <option>{{ translations[locale].hire_me.referral_options.colleague }}</option>
                <option>{{ translations[locale].hire_me.referral_options.client }}</option>
                <option>{{ translations[locale].hire_me.referral_options.event }}</option>
                <option>{{ translations[locale].hire_me.referral_options.other }}</option>
              </select>
            </div>

            <div class="form-group message">
              <textarea name="message" class="form-control" rows="5" placeholder="{{ translations[locale].hire_me.message }}" required></textarea>
            </div>

            <div class="estimate-container">
              <div class="estimate-text">
                <h4>{{ translations[locale].hire_me.estimate_question }}</h4>
              </div>

              <div class="radio-text">
                <div class="radio">
                  <input type="radio" name="estimate" id="estimateZERO" value="0" checked>
                  <label for="estimateZERO">{{ translations[locale].hire_me.no_estimate }}</label>
                </div>

                <div class="radio">
                  <input type="radio" name="estimate" id="estimateONE" value="1">
                  <label for="estimateONE">{{ translations[locale].hire_me.yes_estimate }}</label>
                </div>
              </div>
            </div>

            <button type="submit" class="submit-btn btn--primary">{{ translations[locale].hire_me.send_button }}</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<!-- Hire Me Contact Modal End -->